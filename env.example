# Next.js 설정
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# JWT 설정
JWT_SECRET=your-jwt-secret-key

# 데이터베이스
DATABASE_URL=postgresql://username:password@localhost:5432/spoeum

# 결제 시스템 (PG API)
PG_API_KEY=your-pg-api-key
PG_API_SECRET=your-pg-api-secret
PG_ENVIRONMENT=sandbox

# 알림톡 API
KAKAO_ALIMTALK_API_KEY=your-kakao-alimtalk-api-key
KAKAO_ALIMTALK_API_SECRET=your-kakao-alimtalk-api-secret

# 푸시 알림
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# 파일 업로드
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# 앱 설정
APP_NAME=스포이음
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
